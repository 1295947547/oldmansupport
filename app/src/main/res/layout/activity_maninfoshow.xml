<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".maninfo.ManinfoshowActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFF8D">
        <ImageView
            android:id="@+id/maninfoshow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/ic_left_back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/maninfoshow_back"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:layout_marginRight="40dp"

            android:layout_marginTop="10dp"
            android:text="个人信息"/>

        <TextView
            android:id="@+id/maninfoshow_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:clickable="true"
            android:text="退出登录"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/maninfoshow_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/maninfoshow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="名字"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:stretchColumns="0,1,2,3,4"
                >

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:text="电话号码:"/>
                    <TextView
                        android:id="@+id/maninfoshow_phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="电话号码"/>

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="        性别:"/>
                    <TextView
                        android:id="@+id/maninfoshow_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="性别"/>

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="出生年月:"/>
                    <TextView
                        android:id="@+id/maninfoshow_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="出生年月"/>

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="健康状况:"/>
                    <TextView
                        android:id="@+id/maninfoshow_healthstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="健康状况"/>

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="家庭住址"/>
                    <TextView
                        android:id="@+id/maninfoshow_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/maninfoshow_tabletextsize"
                        android:layout_gravity="center"
                        android:text="家庭住址"/>

                </TableRow>


            </TableLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF7F50"
        android:layout_weight="1.2">

        <Button
            android:id="@+id/maninfoshow_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="编辑资料"
            android:background="@android:color/transparent"
            android:textSize="40dp"/>


    </LinearLayout>


</LinearLayout>