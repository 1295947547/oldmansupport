<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_top_calculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:drawableTop="@drawable/calculator"
            android:background="@drawable/bt_calculator_shape"
            android:text="计算器"/>

        <Button
            android:id="@+id/bt_top_memorandum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:drawableTop="@drawable/memorandum"
            android:background="@drawable/bt_memorandum_shape"
            android:text="备忘录"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/bt_top_flashlight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:drawableTop="@drawable/flashlight"
            android:background="@drawable/bt_flashlight_shape"
            android:text="手电筒"/>

        <Button
            android:id="@+id/bt_top_gps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:drawableTop="@drawable/gps"
            android:background="@drawable/bt_gps_shape"
            android:text="地图"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/bt_top_trash_cleanup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:drawableTop="@drawable/trashcleanup"
            android:background="@drawable/bt_trash_cleanup_shape"
            android:text="垃圾清理"/>

        <Button
            android:id="@+id/bt_top_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:drawableTop="@drawable/music"
            android:background="@drawable/bt_music_shape"
            android:text="音乐"/>

    </LinearLayout>



</LinearLayout>